---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'button'> {
  id: string
  primary?: boolean
  secondary?: boolean
}

const { primary = false, secondary = false, class: extraClass, ...restProps } = Astro.props
---

<button class:list={['btn', { primary, secondary }, extraClass]} {...restProps}>
  <slot />
</button>
