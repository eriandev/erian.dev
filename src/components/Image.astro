---
import { Image as AstroImage } from 'astro:assets'
import type { ImageProps } from '@/components/types'

interface Props extends ImageProps {}

const { src, alt, width, height, decoding, fetchpriority, lazy = false, class: extraClass, ...restProps } = Astro.props
const loading = lazy ? 'lazy' : 'eager'
---

<AstroImage {alt} {width} {height} {loading} {decoding} {fetchpriority} {src} class={extraClass} {...restProps} />
