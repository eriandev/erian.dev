---
import type { LinkProps } from '@/components/types'

interface Props extends LinkProps {}

const { to, title, external = false, featured = false, btn = false, class: extraClass, ...restProps } = Astro.props
const rel = external ? 'noopener noreferrer' : null
const target = external ? '_blank' : null
---

<a {rel} {target} {title} href={to} class:list={[{ btn, 'link featured': featured }, extraClass]} {...restProps}>
  <slot />
</a>
